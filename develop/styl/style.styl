@import 'normalize'
@import 'colors'

$baseFont = 16

@keyframes flash
	0%
		opacity 0
	50% 
		opacity 1
	100% 
		opacity 0

body
	margin 0
	padding 0
	width 100%
	height 100%
	overflow hidden
#wrapper
	height 100%
	width 100%
	img
		transition all ease-out 2s
		position absolute
	#arkanoid
		transition all ease-out 2s
		font-family 'Phosphate'
		font-size 3.5em
		color white
		margin 0
		padding 0
		position absolute
	#barra
		left -100%
		width 500px
	#circulo
		right -100%
		width 300px
#Start
	transition all ease-out 2s
	position absolute
	color $gray
	margin-top 15em
	display none
	cursor pointer
	-webkit-animation flash 2s infinite
#Scores
	background $pink
	position absolute
	transition all ease-out 2s
	left 0
	top -50%
	text-align right
	width 100%
	z-index 1
	p
		color white
		display inline-block
		vertical-align top
	.inline
		display inline-block
		vertical-align top
	.datos
		margin 1em
#canvas
	position absolute
	top 82%
	
#alerta
	background $black
	text-align center
	position absolute
	font-size 0
	color white 
	width 300px
	p
		font-size $baseFont px
	.btn
		background $pink
		display inline-block
		cursor pointer
		font-size $baseFont px
		padding 1em 0
		vertical-align top
		width 50%
		&:hover
			background $pink - 20
		
